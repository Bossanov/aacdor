<container style="margin: 40px;">


<div class="card text-center" style="margin: 40px;">

  <div class="card-body">
    <h2 class="card-title">Liste des médecins du travail(<%=Medecin.all.length%>)</h2>

    <a href="<%=new_medecin_path%>" class="btn btn-danger">Nouveau médecin du travail</a>
  </div>

</div>

 <table class="table" style="margin: 40px;">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Prénom</th>
      <th scope="col">Email</th>
      <th scope="col">Téléphone</th>
      <th scope="col">Action</th>


    </tr>
  </thead>
  <tbody>
    <%i = 1%>
    <%@medecins.each do |a|%>

    <tr>
      <th scope="row"><%=i%></th>
      <td><%=a.nom%></td>
      <td><%=a.prenom%></td>
      <td><%=a.email%></td>
      <td><%=a.telephone%></td>

      <td>
        <a class="fas fa-pen" href="<%=edit_medecin_path(a)%>" title="Modifier"></a>
        <a class="fas fa-eye" href="<%=medecin_path(a)%>" title="Voir"></a>
        <a class="fas fa-trash-alt" href="<%=effacer_medecin_path(medecinid: a.id)%>" onClick="return confirm('Voulez-vous réellement retirer ce médecin du travail ?')" title="Effacer"></a>
      </td>
    </tr>
    <% i = i + 1%>
    <%end%>
  </tbody>
</table>
</container>

