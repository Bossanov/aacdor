<container style="margin: 40px;">
  <h1>Modification du profil du Dr <%=@adherent.prenom.capitalize%> <%=@adherent.nom.upcase%></h1>

  <%= simple_form_for @adherent do |f| %>
  <form style="margin: 40px;">
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.input :nom, type: "Nom", class: "form-control", placeholder: "Nom", label: false%>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :prenom, type: "Prenom", class: "form-control", placeholder: "Prenom", label: false%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-3">
      <%= f.input :naissance, type: "Naissance", class: "form-control", placeholder: "Naissance", label: false%>
    </div>
    <div class="form-group col-md-3">
      <%= f.input :sexe, type: "Sexe", collection: ["Homme","Femme","NC"] ,class: "form-control", placeholder: "Sexe", label: false%>
    </div>
    <div class="form-group col-md-6">
      <%= f.input :telephone, type: "Telephone", class: "form-control", placeholder: "Téléphone", label: false%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.input :rue, type: "Rue", class: "form-control", placeholder: "Rue", label: false%>
    </div>
    <div class="form-group col-md-3">
      <%= f.input :codepostal, type: "Codepostal", class: "form-control", placeholder: "Code postal", label: false%>
    </div>
    <div class="form-group col-md-3">
      <%= f.input :ville, type: "Ville", class: "form-control", placeholder: "Ville", label: false%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.input :departement, type: "Departement", class: "form-control", placeholder: "Département", label: false, collection: ["Nord", "Pas de Calais", "Somme", "Aisne", "Oise"]%>
    </div>
    <div class="form-group col-md-4">
      <%= f.input :siret, type: "Siret", class: "form-control", placeholder: "Siret", label: false%>
    </div>
    <div class="form-group col-md-4">
      <%= f.input :numsecu, type: "Numsecu", class: "form-control", placeholder: "Numéro de sécurité sociale", label: false%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.input :tauxhorairesemaine, type: "Horaire", class: "form-control", placeholder: "Nombre d'heures par semaine", label: false%>
    </div>
    <div class="form-group col-md-4">
      <%= f.input :emploi, type: "Emploi", class: "form-control", placeholder: "Emploi", label: false%>
    </div>
    <div class="form-group col-md-4">
      <%= f.input :respactnucleaire, type: "RAN", class: "form-control", placeholder: "Responsable Activité Nucléaire", label: false, collection: ["oui", "non"]%>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Modifier</button>
</form>
<%end%>
</container>
