

    <table class="table" style="margin: 40px;">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Prénom</th>
      <th scope="col">Adresse</th>
      <th scope="col">Email</th>
      <th scope="col">Téléphone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <%i = 1%>
    <%@adherents.each do |a|%>
      <% u = User.where(id: a.user_id)%>
    <tr>
      <th scope="row"><%=i%></th>
      <td><%=a.nom%></td>
      <td><%=a.prenom%></td>
      <td><%=a.address%></td>
      <td><%=u.last.email%></td>
      <td><%=a.telephone%></td>
      <td>
        <a class="fas fa-pen" href="<%=edit_adherent_path(a)%>" title="Modifier"></a>
        <a class="fas fa-eye" href="<%=adherent_path(a)%>" title="Voir"></a>
        <a class="fas fa-trash-alt" href="<%=effacer_adherent_path(adherentid: a.id)%>" onClick="return confirm('Voulez-vous réellement retirer cet adhérent ?')" title="Effacer"></a>
      </td>

    </tr>
    <% i = i + 1%>
    <%end%>
  </tbody>
</table>

