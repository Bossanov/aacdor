<div class="card bg-light" style="margin: 40px;" >
  <div class="card-body">
    <% @message = Message.new %>
    <%= simple_form_for(@message) do |f| %>
      <form>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.input :nom , id:"name",label: false,  type:"text", name:"name", required: true, class: "form-control", placeholder:"Votre nom"%>
          </div>
          <div class="form-group col-md-6">
            <%= f.input :prenom , id:"prenom",label: false,  type:"text", name:"prenom", required: true, class: "form-control", placeholder:"Votre prénom"%>
          </div>
        </div>
        <div class="form-group">
          <%= f.input :adresse , id:"address",label: false,  type:"text", name:"adresse", required: true, class: "form-control", placeholder:"Votre adresse"%>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.input :email , id:"email",label: false,  type:"text", name:"email", required: true, class: "form-control", placeholder:"Votre E-mail"%>
          </div>
          <div class="form-group col-md-6">
            <%= f.input :telephone , id:"phone",label: false,  type:"text", name:"phone", required: true, class: "form-control", placeholder:"Votre téléphone"%>
          </div>
        </div>
        <div class="form-group">
          <%= f.input :content ,label: false,  type:"text", name:"message", required: true, class: "form-control", placeholder:"Écrivez votre message"%>
        </div>
        <button type="submit" class="btn btn-outline-dark">Envoyer</button>
      </form>
    <%end%>
  </div>
</div>
