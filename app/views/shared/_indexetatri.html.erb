<table class="table" style="margin: 40px;">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Adresse</th>
      <th scope="col">Type</th>
      <th scope="col">Siret</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
    <%i = 1%>
    <%@etablissementstri.each do |a|%>

    <tr>
      <th scope="row"><%=i%></th>
      <td><%=a.nom%></td>
      <td><%=a.address%><% if a.latitude.nil?%>
         <p><i class="fas fa-exclamation-triangle" style="color:red;">adresse non reconnue</i></p>
        <%end%></td>
      <td><%=a.typeeta%></td>
      <td><%=a.siret%></td>
      <td>
        <a class="fas fa-pen" href="<%=edit_etablissement_path(a)%>" title="Modifier"></a>
        <a class="fas fa-eye" href="<%=etablissement_path(a)%>" title="Voir"></a>
        <a class="fas fa-trash-alt" href="<%=effacer_etablissement_path(adherentid: a.id)%>" onClick="return confirm('Voulez-vous réellement retirer cet adhérent ?')" title="Effacer"></a>
      </td>

    </tr>
    <% i = i + 1%>
    <%end%>
  </tbody>
</table>


